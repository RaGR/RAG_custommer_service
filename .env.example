# Application
APP_ENV=dev
APP_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database & Retrieval
DB_PATH=./db/app_data.sqlite
INDEX_PATH=./data/faiss_index
EMBED_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# LLM Provider
LLM_PROVIDER=openrouter
LLM_API_BASE=
LLM_API_KEY=
LLM_MODEL=
HF_API_BASE=
HF_API_KEY=
HF_MODEL=
LLM_TIMEOUT_S=60
LLM_RETRIES=2

# Authentication & Authorization
AUTH_MODE=api_key
REQUIRE_API_KEY=true
API_KEY=change-me

# JWT (when AUTH_MODE=jwt)
JWT_SIGNING_KEY=
JWT_PUBLIC_KEY=
JWT_KID=main
JWT_ISS=rag-instabot
JWT_AUD=rag-clients
ACCESS_TTL_MIN=10
REFRESH_TTL_DAYS=7

# HMAC signing
HMAC_REQUIRED=false
HMAC_WINDOW_SEC=300

# CORS & Security Headers
CORS_ORIGINS=["http://localhost:8000"]
SECURITY_HEADERS_ENABLED=true
MAX_REQUEST_BODY_BYTES=65536
DEBUG_ROUTES=true

# Rate Limiting
RL_BUCKET_SIZE=60
RL_REFILL_PER_SEC=1.0
RL_IDENTITY_HEADER=X-API-Key
